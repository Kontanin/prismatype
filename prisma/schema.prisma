generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  username    String  @unique
  email       String
  password    String
  role        String
  isActive    Boolean
  firstname   String
  lastname    String
  address     String?
  subdistrict String?
  country     String?
  zipcode     Int?
  orders      Order[] // A user can have multiple orders
  blob        Blob[]
}

model Blob {
  id       String  @id @default(uuid())
  title    String  @unique
  tag      String?
  content  String
  isActive Boolean
  userId   String // Reference to the User's ID
  username String
  User     User?   @relation(fields: [userId], references: [id])
}

model Product {
  id           String      @id @default(uuid())
  productName  String      @unique
  isActive     Boolean
  description  String?
  stock        Int?
  unitPrice    Int?
  image        String?
  freeShipping Boolean?
  company      String?
  category     String?
  orderItems   OrderItem[] // A product can be included in multiple order items
}

model Order {
  id              String      @id @default(uuid())
  isActive        Boolean
  shippingFee     Boolean?
  total           Int
  paymentIntentId String?
  status          String
  timestamps      DateTime
  tax             Int
  userId          String // Each order belongs to one user
  user            User        @relation(fields: [userId], references: [id])
  orderItems      OrderItem[] // An order can have multiple order items
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  unitPrice Int
  isActive  Boolean
  productId String // Each order item belongs to one product
  orderId   String // Each order item belongs to one order
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
